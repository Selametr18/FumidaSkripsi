<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.CetakPembayranActivity">

    <Button
        android:id="@+id/btn_save_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan PDF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/CanvasBackground"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearLayout_PDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/CanvasBackground"
                android:gravity="center|start"
                android:orientation="vertical"
                android:layout_marginHorizontal="50dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_kop" />

                <TableLayout
                    android:id="@+id/dynamic_table_pest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="Id Pelanggan"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_dark"
                            android:textSize="10sp"
                            android:textStyle="normal|bold"
                            android:background="@drawable/ic_cell_table"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="Client"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_dark"
                            android:textSize="10sp"
                            android:textStyle="normal|bold"
                            android:background="@drawable/ic_cell_table"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="Nominal"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_dark"
                            android:textSize="10sp"
                            android:textStyle="normal|bold"
                            android:background="@drawable/ic_cell_table"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="Keterangan Bayar"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_dark"
                            android:textSize="10sp"
                            android:textStyle="normal|bold"
                            android:background="@drawable/ic_cell_table"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="Tanggal"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/background_dark"
                            android:textSize="10sp"
                            android:textStyle="normal|bold"
                            android:background="@drawable/ic_cell_table" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/txt_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tgl_laporan"
                    android:layout_gravity="right"
                    android:layout_marginEnd="150dp"
                    android:textSize="12sp"
                    android:layout_marginTop="120dp"
                    android:textColor="@android:color/black" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Sales"
                    android:layout_gravity="right"
                    android:layout_marginEnd="150dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:layout_marginTop="80dp"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/ttd_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUDI SANTOSO"
                    android:layout_gravity="right"
                    android:layout_marginEnd="150dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>